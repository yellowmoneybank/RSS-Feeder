<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projektarbeit.rss_feeder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.DomainChooserActivity"
            android:label="@string/title_activity_domain_chooser"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.FeedOverviewActivity"
            android:label="@string/title_activity_feed_overview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.FeedActivity"
            android:label="@string/title_activity_feed"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>